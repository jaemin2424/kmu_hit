<robot name="rov">
  <!-- World link 정의 -->
  <link name="world" />

  <!-- Base link 정의 -->
  <link name="base_link">
    <visual>
      <origin rpy="1.5708 0 0" xyz="-2 3.5 -1.5"/>
      <geometry>
        <mesh filename="package://rov_rviz/meshes/rov_urdf.stl" scale="0.01 0.01 0.01"/>
      </geometry>
      <material name="grey">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
         <mesh filename="package://rov_rviz/meshes/rov_urdf.stl" scale="0.01 0.01 0.01"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
  </link>

  <!-- Joint 정의 -->
<joint name="base_joint" type="fixed">
  <parent link="world"/>
  <child link="base_link"/>
  <origin xyz="0 0 0" rpy="0 0 0"/>
</joint>

</robot>

